<Profile>

    BoxLayout:
        orientation: "vertical"


        # desnecess√°rio, menos pode ser mais, principalmente tratando de kivymd :(
        # MDTopAppBar:
        #     title: ""
        #     id: toolbarProfile
        #     md_bg_color: 0.9, 0.7, 0.2, 1
        #     use_overflow: True
        #     #overflow_cls: CustomDropMenu()



        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: self.minimum_height
            padding: "10dp"


            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                size_hint_x: 1
                height: "150dp"

                FitImageCustom:
                    id: idImageProfile
                    size_hint: None, None
                    width: "100dp"
                    height: "100dp"                    
                    source: "assets/imagens/none-image-user.png"                    
                    radius: 100
                    pos_hint: {"center_y": 0.9, "center_x": 0.5}
                    on_release: root.file_manager_open()

                MDFlatButton:
                    id: idButtonProfile
                    theme_text_color: "Custom"
                    md_bg_color: 1, 0.5, 0.5, 1
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_y": 0.5, "center_x": 0.5}
                    text: "Enviar"
                    disabled: True
                    opacity: 0
                    on_release: root.send_photo()


            BoxLayout:
                orientation: "vertical"
                size_hint_x: 2

                BoxLayout:
                    MDLabel:
                        id: idNamePerfil
                        halign: "center"

                BoxLayout:    
                    orientation: "horizontal"

                    MDLabel:
                        id: idFollowerLabel
                        text: "0 Followers"
                        halign: "center"

                    MDLabel:
                        id: idFollowingLabel
                        text: "0 Following"
                        halign: "center"



        MDSeparator:

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            padding: "20dp"


            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: self.minimum_height

                MDIconButton:
                    id: idButtonConfig
                    icon: "cog-outline"
                    pos_hint: {"center_x": 0.5}
                    size_hint_x: 1
                    disabled: True
                    opacity: 0
                    on_release: root.manager.current = 'configuration_name'

                MDIconButton:
                    id: idButtonChat
                    icon: "chat"
                    pos_hint: {"center_x": 0.5}
                    size_hint_x: 1
                    disabled: True
                    opacity: 0
                    on_release: root.go_chat()

                MDIconButton:
                    id: idButtonFollow
                    icon: "account-arrow-left"
                    pos_hint: {"center_x": 0.5}
                    size_hint_x: 1
                    disabled: True
                    opacity: 0
                    # on_release: root.do_follow()



            MDBoxLayout:
                id: idValidationEmail
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "40dp"
                
                               
                
                MDLabel:
                    id: idAlertField
                    size_hint_y: None
                    height: "100dp"
                    halign: "justify"
                    text: "It seems that you still don't have an email registered, if you want, register!"


                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {"center_y": 0.9}

                    MDTextField:
                        id: idEmailField
                        validator: "email"

                    MDFlatButton:
                        id: idSendField
                        text: "enviar"
                        on_release: root.validar_password()

        BoxLayout:



# customs components
<FitImageCustom@FitImage+Button>: