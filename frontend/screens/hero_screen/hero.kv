<Hero>
    MDScreenManager:
        id: manager_hero

        MDScreen:
            name: "screen A"
            md_bg_color: 0.9, 0.7, 0.2, 1

            MDHeroFrom:
                id: hero_from
                tag: "hero"
                size_hint: None, None
                size: "120dp", "120dp"
                pos_hint: {"top": .98}
                x: 24

                FitImage:
                    source: "assets/imagens/yourdiary-logo.png"
                    size_hint: None, None
                    size: hero_from.size
                    radius: 100

            Label:
                text: "Hello! Welcome to YourDiary!"
                halign: "center"

            MDRaisedButton:
                text: "Next >>"
                pos_hint: {"center_x": .5}
                y: "36dp"
                on_release:
                    root.ids.manager_hero.current_heroes = ["hero"]
                    root.ids.manager_hero.current = "screen B"

        MDScreen:
            name: "screen B"
            hero_to: hero_to
            md_bg_color: 0.9, 0.5, 0.2, 1

            BoxLayout:
                orientation: "vertical"
                padding: "20dp"
                
                MDHeroTo:
                    size_hint_y: 2
                    id: hero_to
                    tag: "hero"
                    size_hint: None, None
                    size: "220dp", "220dp"
                    pos_hint: {"center_x": .5, "center_y": .5}

                Label:
                    size_hint_y: 1
                    halign: "justify"
                    height: self.texture_size[1]
                    text_size: self.width, None
                    text: 
                        "In this app you can take notes, write personal things in the form of a digital diary"\
                        ", share these notes with others, as well as being able to chat with other YourDiary users, "\
                        "all this without identifying yourself, if you don't want to, of course ;)"

            BoxLayout:
                orientation: "horizontal"
                spacing: "50dp"
                padding: "20dp"

                MDRaisedButton:
                    size_hint_x: 1
                    text: "<< Previous"
                    pos_hint: {"center_x": .5}
                    y: "52dp"
                    on_release:
                        root.ids.manager_hero.current_heroes = ["hero"]
                        root.ids.manager_hero.current = "screen A"

                MDRaisedButton:
                    size_hint_x: 1
                    text: "Next >>"
                    pos_hint: {"center_x": .5}
                    y: "8dp"
                    on_release:
                        root.ids.manager_hero.current_heroes = ["hero"]
                        root.ids.manager_hero.current = "screen C"

        MDScreen:
            name: "screen C"
            md_bg_color: 0.5, 0.5, 0.7, 1

            BoxLayout:
                orientation: "vertical"
                
                BoxLayout:
                    size_hint_y: 1
                    spacing: "50dp"
                    padding: "20dp"
                    orientation: "vertical"

                    Label:
                        halign: "justify"
                        size_hint_y: None
                        pos_hint: {"center_y": .5}
                        height: self.texture_size[1]
                        text_size: self.width, None
                        text: 
                            "Hope this app is useful in some way "\
                            "And I hope you guys make proper use of the app. "

                    MDRaisedButton:
                        text: "Select Main Color"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        theme_text_color: "Custom"
                        md_bg_color: 1.0, 0.30196078431372547, 0.13725490196078433, 1
                        on_release: root.open_color_picker()

                BoxLayout:
                    size_hint_y: 1
                    orientation: "horizontal"
                    spacing: "50dp"
                    padding: "20dp"

                    MDRaisedButton:
                        size_hint_x: 1
                        text: "<< Previous"
                        pos_hint: {"center_x": .5}
                        y: "36dp"
                        on_release:
                            root.ids.manager_hero.current_heroes = ["hero"]
                            root.ids.manager_hero.current = "screen B"

                    MDRaisedButton:
                        size_hint_x: 1
                        text: "Next >>"
                        pos_hint: {"center_x": .5}
                        y: "8dp"
                        on_release:
                            root.go_splash()