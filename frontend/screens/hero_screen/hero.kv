<Hero>
    MDScreenManager:
        id: manager_hero

        MDScreen:
            name: "screen A"
            md_bg_color: "lightblue"

            MDHeroFrom:
                id: hero_from
                tag: "hero"
                size_hint: None, None
                size: "120dp", "120dp"
                pos_hint: {"top": .98}
                x: 24

                FitImage:
                    source: "assets/imagens/yourdiary-logo.png"
                    size_hint: None, None
                    size: hero_from.size
                    radius: 100

            MDRaisedButton:
                text: "Próximo >>"
                pos_hint: {"center_x": .5}
                y: "36dp"
                on_release:
                    root.ids.manager_hero.current_heroes = ["hero"]
                    root.ids.manager_hero.current = "screen B"

        MDScreen:
            name: "screen B"
            hero_to: hero_to
            md_bg_color: "cadetblue"

            MDHeroTo:
                id: hero_to
                tag: "hero"
                size_hint: None, None
                size: "220dp", "220dp"
                pos_hint: {"center_x": .5, "center_y": .5}

            BoxLayout:
                orientation: "horizontal"
                spacing: "50dp"
                padding: "20dp"

                MDRaisedButton:
                    size_hint_x: 1
                    text: "<< Voltar"
                    pos_hint: {"center_x": .5}
                    y: "52dp"
                    on_release:
                        root.ids.manager_hero.current_heroes = ["hero"]
                        root.ids.manager_hero.current = "screen A"

                MDRaisedButton:
                    size_hint_x: 1
                    text: "Próximo >>"
                    pos_hint: {"center_x": .5}
                    y: "8dp"
                    on_release:
                        root.ids.manager_hero.current_heroes = ["hero"]
                        root.ids.manager_hero.current = "screen C"

        MDScreen:
            name: "screen C"

            MDLabel:
                text: "Screen C"
                halign: "center"


            BoxLayout:
                orientation: "horizontal"
                spacing: "50dp"
                padding: "20dp"

                MDRaisedButton:
                    size_hint_x: 1
                    text: "<< Voltar"
                    pos_hint: {"center_x": .5}
                    y: "36dp"
                    on_release:
                        root.ids.manager_hero.current_heroes = ["hero"]
                        root.ids.manager_hero.current = "screen B"

                MDRaisedButton:
                    size_hint_x: 1
                    text: "Próximo >>"
                    pos_hint: {"center_x": .5}
                    y: "8dp"
                    on_release:
                        root.go_splash()