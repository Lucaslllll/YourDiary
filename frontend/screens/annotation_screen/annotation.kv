<Annotation>
    MDBoxLayout:
        orientation: "vertical"


        MDTopAppBar:
            title: ""
            id: toolbarNoticia
            md_bg_color: 1, 0.5, 0.5, 1
            use_overflow: True
            #overflow_cls: CustomDropMenu()

            right_action_items: 
                [
                ["dots-vertical", lambda x: root.DropApp(x), "Opções", "Opções"],
                ]



        ScrollView:

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "10dp"
                spacing: "100dp"

                MDLabel:
                    # md_bg_color: 1, .8, .6, 1
                    id: title_annotation
                    font_style: "H6"
                    bold: True
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    # text: root.title_example
                    text: "Título Sobrenome"


                FitImage:
                    id: image_annotation
                    size_hint_y: None
                    height: "300dp"
                    source: "assets/imagens/yourdiary-logo.png"


                MDLabel:
                    # md_bg_color: 0.3, 1, 0.6, 1
                    id: details_annotation
                    halign: "justify"
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    text: root.text_example


                

                MDLabel:
                    id: edit_annotation
                    halign: "center"
                    valign: "center"
                    text: "Não Editado"

                MDLabel:
                    id: public_annotation
                    halign: "center"
                    valign: "center"
                    text: "Não Público"


                GridLayout:
                    id: categories_annotation
                    rows: 10
                    cols: 5
                    spacing: "10dp"
                    size_hint_y: None
                    height: self.minimum_height
                    

                    MDLabel:    
                        halign: "left"
                        bold: True
                        text: "Categories:"



                BoxLayout:
                    orientation: "vertical"
                    spacing: "40dp"

                    MDLabel:    
                        halign: "left"
                        bold: True
                        text: "Ações:"

                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: "20dp"

                        MDIconButton:
                            id: id_like
                            icon: "thumb-up"
                            pos_hint: {"center_x": 0.5}
                            theme_text_color: "Custom"

                        MDIconButton:
                            id: id_favorite
                            icon: "star"
                            pos_hint: {"center_x": 0.5}
                            theme_text_color: "Custom"
                            on_release: root.do_favorite()

                        MDIconButton:
                            id: id_report
                            icon: "alert-octagon"
                            pos_hint: {"center_x": 0.5}
                            theme_text_color: "Custom"


                        Arroba:
                            id: author_annotation
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_size: self.width, None      
                            pos_hint: {"center_x": 0.9, "center_y": 0.5}
                            text: "Author: Lucaslllll"
                            theme_text_color: "Custom"
                            text_color: 0.3, 0.3, 1, 1
                            on_release: root.go_profile()



                BoxLayout:



<Arroba@ButtonBehavior+MDLabel>: