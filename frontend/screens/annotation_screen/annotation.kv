<Annotation>
    BoxLayout:
        orientation: "vertical"

        
        MDBackdrop:
            id: toolbarNoticia
            header_text: ""
            title: "a date"
            anchor_title: "center"
            use_overflow: True
            # overflow_cls: CustomDropMenu()

            right_action_items: 
                [
                ["dots-vertical", lambda x: root.DropApp(x), "Options", "Options"],
                ]

            MDBackdropBackLayer:
                pos_hint: {"center_y": .7, "center_x": .5}

                MDSwiper:
                    id: image_annotation
                    size_hint_y: None
                    height: root.height - dp(300)
                    


            MDBackdropFrontLayer:

                ScrollView:
                    scroll_timeout : 100

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        padding: "10dp"
                        spacing: "100dp"

                        MDLabel:
                            # md_bg_color: 1, .8, .6, 1
                            id: title_annotation
                            font_style: "H6"
                            bold: True
                            halign: "center"
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_size: self.width, None
                            # text: root.title_example
                            text: "TÃ­tulo Sobrenome"



                        

                        # MDRaisedButton:
                        #     text: "Go to Second"
                        #     on_release: image_annotation.set_current(1)
                        
                        
                        MDLabel:
                            # md_bg_color: 0.3, 1, 0.6, 1
                            id: details_annotation
                            halign: "justify"
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_size: self.width, None
                            text: root.text_example


                        

                        MDLabel:
                            id: edit_annotation
                            halign: "center"
                            valign: "center"
                            text: "No Edited"

                        MDLabel:
                            id: public_annotation
                            halign: "center"
                            valign: "center"
                            text: "Private"


                        GridLayout:
                            id: categories_annotation
                            rows: 10
                            cols: 5
                            spacing: "10dp"
                            size_hint_y: None
                            height: self.minimum_height
                            

                            MDLabel:    
                                halign: "left"
                                bold: True
                                text: "Categories:"



                        BoxLayout:
                            orientation: "vertical"
                            spacing: "40dp"

                            MDLabel:    
                                halign: "left"
                                bold: True
                                text: "Actions:"

                            BoxLayout:
                                orientation: "horizontal"
                                size_hint_y: None
                                height: self.minimum_height
                                spacing: "20dp"

                                MDIconButton:
                                    id: id_like
                                    icon: "thumb-up"
                                    pos_hint: {"center_x": 0.5}
                                    theme_text_color: "Custom"
                                    on_release: root.do_like()

                                MDIconButton:
                                    id: id_favorite
                                    icon: "star"
                                    pos_hint: {"center_x": 0.5}
                                    theme_text_color: "Custom"
                                    on_release: root.do_favorite()

                                MDIconButton:
                                    id: id_report
                                    icon: "alert-octagon"
                                    pos_hint: {"center_x": 0.5}
                                    theme_text_color: "Custom"
                                    on_release: root.manager.current = "about_name"


                                Arroba:
                                    id: author_annotation
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    text_size: self.width, None      
                                    pos_hint: {"center_x": 0.9, "center_y": 0.5}
                                    text: "Author: Lucaslllll"
                                    theme_text_color: "Custom"
                                    text_color: 0.3, 0.3, 1, 1
                                    on_release: root.go_profile()


                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height

                            CommentButton:
                                color: 0,0,0,1
                                text: "LOAD COMMENTS"
                                font_size: "22sp"
                                pos_hint: {"center_x": 0.5}
                                on_release: pass


                            
                            BoxLayout:
                                orientation: "horizontal"
                                size_hint_y: None
                                height: self.minimum_height
                                padding: "10dp"

                                MDTextField:
                                    size_hint_x: 4
                                    hint_text: "comment"
                                    pos_hint: {"center_y": 0.5}
                                    multiline: True

                                MDIconButton:
                                    size_hint_x: 1
                                    pos_hint: {"center_y": 0.5}
                                    icon: "send"


                            ScrollView:
                                size_hint_y: None
                                height: "350dp"

                                MDList:
                                    id: idComments

                                    SessionComment:


                        BoxLayout:


                            

        


