<Configuration>
    MDSliverAppbar:
        # theme_icon_color: "Custom"
        # background_color: "#2d4a50"
        max_height: "200dp"

        MDSliverAppbarHeader:

            MDRelativeLayout:
                md_bg_color: 0.1, 0, 0.1, 1

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: self.minimum_height
                    padding: "20dp"
                    pos_hint: {"center_y": .9, "center_x": 0.5}


                    Label:
                        # size_hint_x: 5
                        text: "Settings"
                        bold: True
                        font_size: "18sp"
                        halign: "center"






        MDSliverAppbarContent:
            id: content
            orientation: "vertical"
            padding: "12dp"
            spacing: "15dp"
            adaptive_height: True


            
                              


<Content>:
    id: idContentPassword
    orientation: "vertical"
    size_hint_y: None
    height: "230dp"
    padding: "10dp"
    pos_hint: {"center_y": 0.4}

    MDTextField:
        id: idPassword1
        padding: "20dp"
        hint_text: "new password"
        disabled: True

    MDTextField:
        id: idPassword2
        padding: "20dp"
        hint_text: "repet new passowrd"
        disabled: True

    MDTextField:
        id: idCodeEmail
        padding: "20dp"
        hint_text: "code received in the email"
        disabled: True        

    MDFlatButton:
        id: idButtonSteps
        pos_hint: {"center_x": 0.5}
        theme_text_color: "Custom"
        md_bg_color: 0.9, 0.7, 0.2, 1
        text_color: 1, 1, 1, 1
        text: "Send A Message With Code To Your Email"
        on_release: root.screen.steps_to_change()


<ContentPickerColor>:
    size_hint_y: None
    height: "72dp"

    OneLineIconListItem:
        text: "Change Main Color"
        on_release: root.screen.open_color_picker()


        IconLeftWidget:
            icon: "palette"


<ContentLogout>:
    size_hint_y: None
    height: "72dp"

    OneLineIconListItem:
        text: "Logout"
        on_release: root.screen.do_logout()


        IconLeftWidget:
            icon: "logout"


