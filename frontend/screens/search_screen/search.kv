<Search>
    BoxLayout:
        orientation: "vertical"
        md_bg_color:
        padding: "12dp"
        spacing: "15dp"

        BoxLayout:
            size_hint_y: 1

            MDTextField:
                id: idSearchText
                size_hint_x: 6
                mode: "round"
                pos_hint: {"center_y": 0.5}
                theme_text_color: "custom"
                text_color_focus: "black"
                line_color_normal: "gray"
                line_color_focus: "gray"

            MDIconButton:
                size_hint_x: 1
                icon: "magnify"
                theme_text_color: "Custom"
                icon_color: 0, 0, 0, 1
                pos_hint: {"center_y": 0.5}
                markup: True
                on_release: root.reload_search()

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 9
            spacing: "20dp"

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                spacing: "7dp"

                ChipFilter:

                ChipFilter:

            MDSpinner:
                id: spinner
                size_hint: None, None
                size: dp(30), dp(30)
                pos_hint: {"center_x": .5}
                active: False

            MDSeparator:

            ScrollView:

                BoxLayout:
                    id: annotations
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height




<MDCardDiarySearch>:
    text: "Two-line item"
    secondary_text: "Secondary text here"


    IconRightWidget:
        icon: "forward"
        on_release: root.read_more()








<ChipFilter>:
    md_bg_color: 1, 1, 1, 1
    line_color: .7, .7, .7, .7
    pos_hint: {"center_x": .9, "center_y": .9}

    MDChipText:
        id: idTestChip
        theme_text_color: "Custom"
        type: "filter"
        md_bg_color: 1, 1, 1, 1
        text_color: 0, 0, 0, 1
        text: "MDChip"
        active: True
